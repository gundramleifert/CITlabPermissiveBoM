            </dependency>
            <dependency>
                <groupId>eu.transkribus</groupId>
                <artifactId>TranskribusCore</artifactId>
                <exclusions>
                    <exclusion>
                        <groupId>org.docx4j</groupId>
                        <artifactId>docx4j</artifactId>
                    </exclusion>
                </exclusions>
                <version>0.1.8</version>
            </dependency>
            <dependency>
                <groupId>eu.transkribus</groupId>
