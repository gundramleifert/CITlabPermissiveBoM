            <dependency>
                <groupId>eu.transkribus</groupId>
                <artifactId>TranskribusInterfaces</artifactId>
                <version>0.0.5</version>
                <exclusions>
                    <!--ONLY USE THE INTERFACES, DO NOT CARE ABOUT OPEN_CV, ...-->
